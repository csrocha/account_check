<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_account_check_journal_form" model="ir.ui.view">
            <field name="name">account_check.account.journal.form</field>
            <field name="model">account.journal</field>
            <field name="inherit_id" ref="account.view_account_journal_form"/>
            <field name="arch" type="xml">
                <data>
                    <xpath expr="/form/group" position="inside">
                        <group>
                            <field name="check_type" attrs="{'invisible':[('payment_method','not in', ('check','promissory'))],'required':[('payment_method','in', ('check','promissory'))]}"/>
                            <field name="validate_only_checks" attrs="{'invisible':[('check_type','=', False)]}"/>
                        </group>
                        <group>
                            <field name="collection_account_id" attrs="{'invisible':['|',('payment_method','not in', ('check','promissory')),('check_type','!=', 'third')],'required':[('check_type','=','third')]}"/>
                            <field name="warrant_account_id" attrs="{'invisible':['|',('payment_method','not in', ('check','promissory')),('check_type','!=', 'third')],'required':[('check_type','=','third')]}"/>
                        </group>
                    </xpath>
                    <xpath expr="//form/notebook" position="inside">
                        <page string="Checkbooks" attrs="{'invisible':['|',('payment_method','not in', ('check','promissory')),('check_type','!=', 'issue')]}">
                        <field name="checkbook_ids" attrs="{'required':[('check_type', '=', 'issue')]}" context="{'default_company_id':company_id}"/>
                    </page>
                    </xpath>
                </data>
            </field>
        </record>
    </data>
</openerp>
